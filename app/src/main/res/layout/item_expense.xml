<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:clickable="true"
    android:longClickable="true"
    android:backgroundTint="@color/cardBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Expense Title with gap, aligned slightly right -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Title"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="12dp" /> <!-- Added left margin for gap -->

        <!-- Category and Amount with gap -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#757575"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"/> <!-- Added start margin for slight right alignment -->

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="à§³150.00"
                android:textColor="#1D1D1D"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <!-- Timestamp with gap, aligned slightly right and moved up -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/05/2025 10:30:00"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
        android:layout_marginStart="12dp" /> <!-- Added start margin for slight right alignment -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
